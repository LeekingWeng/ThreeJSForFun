    body
        script(src="/threejs/static/lib/threejs2/three.min.js")

        script(src="/threejs/static/lib/threejs/stats.min.js")
        script(src="/threejs/static/lib/threejs/dat.gui.min.js")
        script(src="/threejs/static/lib/threejs/Detector.js")
        script(src="/threejs/static/lib/threejs2/OrbitControls.js")
